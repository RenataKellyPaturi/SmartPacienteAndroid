<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.smartpatient.smartpatient">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".com.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".com.MenuActivity"
            android:label="@string/title_activity_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".com.ExercicioActivity"
            android:label="@string/title_activity_exercicio" />
        <activity
            android:name=".com.AlimentacaoActivity"
            android:label="@string/title_activity_alimentacao" />
        <activity
            android:name=".com.MedicamentoActivity"
            android:label="@string/title_activity_medicamento" />
        <activity
            android:name=".com.DicasActivity"
            android:label="@string/title_activity_dica" />
        <activity android:name=".com.retorno_consultas" />
    </application>

</manifest>